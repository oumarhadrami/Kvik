<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdelkerim.kvik">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"
        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Kvik"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="About us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MissionActivity"
            android:label="Our Mission"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VisionActivity"
            android:label="Our Vision"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ContactsActivity"
            android:label="Contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrainingMethoActivity"
            android:label="Training Methodology"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrainingScheActivity"
            android:label="Training Schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsActivity"
            android:label="Events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HelpActivity"
            android:label="Help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrainerReqActivity"
            android:label="Trainers Required"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SupportActivity"
            android:label="Support  Kvik"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterYourDetailsActivity"
            android:label="Enter Your Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NumberVerifyActivity"
            android:label="Verify Phone Number"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OtpVerifyActivity"
            android:label="OTP Verification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseDetailsActivity"
            android:label="Course Details"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".TrainerDetails"
            android:label="Trainer Details"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>